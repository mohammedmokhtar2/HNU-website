generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AuditLog {
  id        String   @id @default(cuid())
  action    String
  entity    String
  entityId  String?
  metadata  Json?
  userId    String?
  clerkId   String?
  sessionId String?
  isGuest   Boolean  @default(false)
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  clerkUser User?    @relation(fields: [clerkId], references: [clerkId])

  @@index([sessionId])
  @@index([isGuest])
  @@index([clerkId])
  @@index([action])
  @@index([entity])
  @@index([createdAt])
  @@index([userId, action])
  @@index([clerkId, action])
  @@index([sessionId, action])
  @@index([isGuest, createdAt])
}

model User {
  id              String       @id @default(cuid())
  clerkId         String?      @unique
  name            String?
  email           String       @unique
  role            UserType     @default(GUEST)
  image           String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  collegeId       String?
  auditLogs       AuditLog[]
  permissions     Permission[]
  createdBlogs    Blogs[]
  collegesCreated College[]    @relation("CollegeCreatedBy")
  College         College?     @relation(fields: [collegeId], references: [id])

  @@map("users")
}

model University {
  id        String    @id @default(cuid())
  name      Json
  slug      String    @unique
  config    Json?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  pages     Page[]
  sections  Section[]
  Blogs     Blogs[]
  colleges  College[]

  @@map("universities")
}

model College {
  id              String      @id @default(cuid())
  slug            String      @unique
  name            Json
  description     Json?
  config          Json?
  type            CollegeType
  fees            Json?
  studentsCount   Int?
  programsCount   Int?
  facultyCount    Int?
  establishedYear Int?
  createdById     String?
  universityId    String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  Page            Page[]
  sections        Section[]
  statistics      Statistic[]
  Blogs           Blogs[]
  createdBy       User?       @relation("CollegeCreatedBy", fields: [createdById], references: [id])
  University      University? @relation(fields: [universityId], references: [id], onDelete: Cascade)
  programs        Program[]
  User            User[]

  @@map("colleges")
}

model Program {
  id          String   @id @default(cuid())
  name        Json
  description Json?
  config      Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  collageId   String?
  collage     College? @relation(fields: [collageId], references: [id], onDelete: Cascade)

  @@map("programs")
}

model Section {
  id           String      @id @default(cuid())
  type         SectionType
  title        Json?
  content      Json?
  mediaUrl     Json?
  order        Int
  universityId String?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  collageId    String?
  collage      College?    @relation(fields: [collageId], references: [id], onDelete: Cascade)
  University   University? @relation(fields: [universityId], references: [id], onDelete: Cascade)
}

model Page {
  id           String        @id @default(cuid())
  title        Json
  config       Json?
  isActive     Boolean       @default(true)
  slug         String        @unique
  universityId String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  collageId    String?
  collage      College?      @relation(fields: [collageId], references: [id], onDelete: Cascade)
  University   University?   @relation(fields: [universityId], references: [id], onDelete: Cascade)
  sections     PageSection[]
}

model PageSection {
  id        String          @id @default(cuid())
  type      PageSectionType
  title     Json?
  content   Json?
  mediaUrl  Json?
  order     Int
  pageId    String
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  page      Page            @relation(fields: [pageId], references: [id], onDelete: Cascade)
}

model Statistic {
  id        String   @id @default(cuid())
  label     Json
  collageId String?
  collage   College? @relation(fields: [collageId], references: [id], onDelete: Cascade)
}

model Permission {
  id          String   @id @default(cuid())
  userId      String
  action      Action
  resource    String
  title       String
  description String?
  isActive    Boolean  @default(true)
  metadata    Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id])
}

model Blogs {
  id           String      @id @default(cuid())
  title        Json
  content      Json
  image        String[]
  tags         String[]
  isFeatured   Boolean     @default(false)
  isPublished  Boolean     @default(true)
  slug         String      @unique
  publishedAt  DateTime?
  scheduledAt  DateTime?
  order        Int         @default(0)
  universityId String?
  createdById  String?
  collageId    String?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  isEvent      Boolean     @default(false)
  eventConfig  Json?
  collage      College?    @relation(fields: [collageId], references: [id], onDelete: Cascade)
  createdBy    User?       @relation(fields: [createdById], references: [id])
  University   University? @relation(fields: [universityId], references: [id], onDelete: Cascade)

  @@map("blogs")
}

model config {
  id        String   @id @default(cuid())
  config    Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("configs")
}

model messages {
  id            String   @id @default(cuid())
  messageConfig Json?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("messages")
}

enum UserType {
  ADMIN
  SUPERADMIN
  GUEST
  OWNER
}

enum CollegeType {
  TECHNICAL
  MEDICAL
  ARTS
  OTHER
}

enum SectionType {
  HEADER
  HERO
  ABOUT
  ACTIONS
  OUR_MISSION
  NUMBERS
  STUDENT_UNION
  COLLEGES_SECTION
  PROGRAMS_SECTION
  EGYPT_STUDENT_GROUP
  PRESIDENT
  BLOGS
  CUSTOM
  PROGRAMS
  CONTACT_US
  STUDENT_ACTIVITIES
}

enum PageSectionType {
  HERO1
  HERO2
  ABOUT1
  ABOUT2
  CONTACT
  BLOGS
  PRESIDENT
  PRESIDENT_MESSAGE
  STUDENT_ACTIVITIES
  STUDENT_UNIONS
  FOR_EGYPT_GROUP
  CUSTOM
  OUR_HISTORY
}

enum Action {
  VIEW
  EDIT
  DELETE
  CREATE
}
